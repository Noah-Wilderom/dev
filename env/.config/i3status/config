general {
    colors = true
    interval = 5
}

order += "cpu_usage"
order += "memory"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "tztime local"

cpu_usage {
    format = "CPU %usage"
}

memory {
    format = "RAM %used/%total"
}

disk "/" {
    format = "Disk %avail"
}

wireless _first_ {
    format_up = "WiFi %essid %quality"
    format_down = "WiFi down"
}

ethernet _first_ {
    format_up = "LAN %ip"
    format_down = "LAN down"
}

battery all {
    format = "Bat %status %percentage"
}

tztime local {
    format = "%Y-%m-%d %H:%M"
}